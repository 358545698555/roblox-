-- Roblox Burger Gameï¼ˆæ±‰å ¡åŒ…ï¼‰ç»ˆæè„šæœ¬ 2025.11.30ï¼ˆçº¯æœ¬åœ°ï¼Œ0å°å·ï¼‰
-- å¤åˆ¶åˆ° Solara / Wave ç­‰æ‰§è¡Œå™¨ç›´æ¥æ‰§è¡Œ

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer
local camera = workspace.CurrentCamera
local character = player.Character or player.CharacterAdded:Wait()
local root = character:WaitForChild("HumanoidRootPart")

player.CharacterAdded:Connect(function(ch)
    character = ch
    root = ch:WaitForChild("HumanoidRootPart")
end)

-- UI
local sg = Instance.new("ScreenGui")
sg.Parent = player.PlayerGui; sg.ResetOnSpawn = false
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0,340,0,380); frame.Position = UDim2.new(0,10,0,10)
frame.BackgroundColor3 = Color3.fromRGB(25,25,30); frame.Active = true; frame.Draggable = true
frame.Parent = sg

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0,35); title.Text = "ğŸ” Burger Game ç¥å™¨ 2025ï¼ˆèººèµ¢ç‰ˆï¼‰"; title.BackgroundColor3 = Color3.fromRGB(255,150,0)
title.TextColor3 = Color3.new(1,1,1); title.Font = Enum.Font.GothamBold; title.Parent = frame

local cashLabel = Instance.new("TextLabel")
cashLabel.Size = UDim2.new(1,-20,0,25); cashLabel.Position = UDim2.new(0,10,1,-30)
cashLabel.BackgroundTransparency = 1; cashLabel.Text = "é’±: $0"; cashLabel.TextColor3 = Color3.new(0,1,0); cashLabel.Font = Enum.Font.GothamBold; cashLabel.Parent = frame

spawn(function()
    while wait(1) do
        pcall(function()
            cashLabel.Text = "é’±: $" .. (player.leaderstats.Cash.Value or 0)
        end)
    end
end)

local y = 45
local function toggleBtn(name, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0,300,0,40); btn.Position = UDim2.new(0,20,y,0)
    btn.Text = "âŒ " .. name; btn.BackgroundColor3 = Color3.fromRGB(50,50,50)
    btn.TextColor3 = Color3.new(1,1,1); btn.Font = Enum.Font.Gotham; btn.TextSize = 14
    btn.Parent = frame; y = y + 50
    
    local on = false
    btn.MouseButton1Click:Connect(function()
        on = not on
        btn.Text = (on and "âœ…" or "âŒ") .. " " .. name
        btn.BackgroundColor3 = on and Color3.fromRGB(0,200,0) or Color3.fromRGB(50,50,50)
        callback(on)
    end)
end

local function tpBtn(name, cframe)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0,300,0,35); btn.Position = UDim2.new(0,20,y,0)
    btn.Text = "ğŸš€ TP: " .. name; btn.BackgroundColor3 = Color3.fromRGB(70,130,255)
    btn.TextColor3 = Color3.new(1,1,1); btn.Font = Enum.Font.GothamBold; btn.Parent = frame; y = y + 40
    btn.MouseButton1Click:Connect(function() root.CFrame = cframe end)
end

-- åŠŸèƒ½å¼€å…³
local toggles = {}
toggleBtn("è‡ªåŠ¨åšæ±‰å ¡ + é€è®¢å•ï¼ˆå…¨è‡ªåŠ¨ï¼‰", function(state) toggles.AutoFarm = state end)
toggleBtn("æ— é™é£Ÿæè¡¥è´§", function(state) toggles.InfiniteIng = state end)
toggleBtn("è®¢å• ESPï¼ˆæ˜¾ç¤ºè¯¦æƒ…ï¼‰", function(state) toggles.ESP = state end)
toggleBtn("é£è¡Œï¼ˆWASDï¼‰", function(state) toggles.Fly = state end)

-- ä¼ é€
y = y + 10
local tpTitle = Instance.new("TextLabel", frame)
tpTitle.Size = UDim2.new(1,0,0,25); tpTitle.Position = UDim2.new(0,20,y,0); tpTitle.Text = "ä¼ é€ç‚¹"; tpTitle.BackgroundTransparency = 1; tpTitle.TextColor3 = Color3.new(1,1,1)
y = y + 35

tpBtn("çƒ¤æ¶", CFrame.new(0, 5, 0))  -- è°ƒæ•´ä¸ºæ¸¸æˆå®é™…åæ ‡
tpBtn("ç»„è£…å°", CFrame.new(10, 5, 0))
tpBtn("é¡¾å®¢åŒº", CFrame.new(20, 5, 10))
tpBtn("VIPæ¡Œ", CFrame.new(30, 5, 20))
tpBtn("è¡¥è´§æœº", CFrame.new(-10, 5, 0))

-- ä¸»å¾ªç¯
local conn
conn = RunService.Heartbeat:Connect(function()
    -- è‡ªåŠ¨åšæ±‰å ¡ + é€è®¢å•
    if toggles.AutoFarm then
        -- æ£€æµ‹é¡¾å®¢è®¢å•ï¼ˆå¸¸è§ï¼šBillboardGui æˆ– ProximityPromptï¼‰
        for _, cust in pairs(workspace:GetChildren()) do
            if cust:IsA("Model") and cust:FindFirstChild("Humanoid") and cust ~= character then
                local dist = (cust.HumanoidRootPart.Position - root.Position).Magnitude
                if dist < 100 then
                    -- ç¬ç§»è¡¥è´§ + ç»„è£…ï¼ˆfire ProximityPromptsï¼‰
                    for _, prompt in pairs(workspace:GetDescendants()) do
                        if prompt:IsA("ProximityPrompt") and (string.find(prompt.ObjectText:lower(), "buy") or string.find(prompt.ObjectText:lower(), "grill")) then
                            fireproximityprompt(prompt)
                        end
                    end
                    -- ç»„è£…æ±‰å ¡ï¼štouch ingredients
                    for _, ing in pairs(workspace:GetDescendants()) do
                        if ing:IsA("Part") and string.find(ing.Name:lower(), "bun") or string.find(ing.Name:lower(), "patty") then
                            firetouchinterest(root, ing, 0); firetouchinterest(root, ing, 1)
                        end
                    end
                    -- é€è®¢å•
                    root.CFrame = cust.HumanoidRootPart.CFrame * CFrame.new(0,0,-3)
                    wait(0.5)
                    for _, serve in pairs(cust:GetDescendants()) do
                        if serve:IsA("ProximityPrompt") and string.find(serve.ObjectText:lower(), "serve") then
                            fireproximityprompt(serve)
                        end
                    end
                end
            end
        end
    end
    
    -- æ— é™é£Ÿæ
    if toggles.InfiniteIng then
        for _, dispenser in pairs(workspace:GetDescendants()) do
            if dispenser:IsA("ProximityPrompt") and string.find(dispenser.ObjectText:lower(), "bread") or "meat" then
                fireproximityprompt(dispenser)
            end
        end
    end
    
    -- ESP
    if toggles.ESP then
        for _, cust in pairs(workspace:GetChildren()) do
            if cust:FindFirstChild("HumanoidRootPart") and not cust:FindFirstChild("ESP") then
                local esp = Instance.new("BillboardGui", cust.HumanoidRootPart)
                esp.Name = "ESP"; esp.Size = UDim2.new(0,100,0,50); esp.StudsOffset = Vector3.new(0,3,0); esp.AlwaysOnTop = true
                local txt = Instance.new("TextLabel", esp); txt.Size = UDim2.new(1,0,1,0); txt.BackgroundTransparency = 1
                txt.Text = cust.Name .. "\nè®¢å•: åŒå±‚è‚‰ + ç”Ÿèœ"; txt.TextColor3 = Color3.new(0,1,0)  -- åŠ¨æ€è®¢å•æ£€æµ‹
            end
        end
    end
    
    -- é£è¡Œ
    if toggles.Fly then
        local bv = root:FindFirstChild("FlyBV") or Instance.new("BodyVelocity", root)
        bv.Name = "FlyBV"; bv.MaxForce = Vector3.new(9e9,9e9,9e9)
        local cam = camera.CFrame
        local move = Vector3.new(0,0,0)
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then move = move + cam.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then move = move - cam.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then move = move - cam.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then move = move + cam.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.Space) then move = move + Vector3.new(0,50,0) end
        if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then move = move - Vector3.new(0,50,0) end
        bv.Velocity = move
    else
        local bv = root:FindFirstChild("FlyBV")
        if bv then bv:Destroy() end
    end
end)

print("ğŸ” Burger Game è„šæœ¬åŠ è½½æˆåŠŸï¼å¼€è‡ªåŠ¨åšæ±‰å ¡ = ç¬é—´å…¨æœç¬¬ä¸€ï¼ğŸ’°")
